{
    "general": {
        "type": "header",
        "description": "General Settings"
    },
    
    "panelIcon": {
        "type": "iconfilechooser",
        "description": "Panel Icon",
        "default": "folder",
        "tooltip": "Accepts icon name or direct path (supports symbolic icons)"
    },
    
    "panelText": {
        "type": "entry",
        "description": "Panel Text",
        "default": ""
    },
    
    "keyOpen": {
        "type": "keybinding",
        "description": "Menu shorcut key",
        "default": "<Super>p"
    },
    
    "iconSize": {
        "type": "spinbutton",
        "default": 20,
        "min": 10,
        "max": 50,
        "units": "px",
        "step": 2,
        "description": "Icon Size"
    },
    
    "sep1": {
        "type": "separator"
    },
    
    "userSection": {
        "type": "header",
        "description": "User Section"
    },
    
    "showDesktop": {
        "type": "checkbox",
        "description": "Show Desktop",
        "default": true
    },
    
    "userCustomPlaces": {
        "type": "entry",
        "description": "Custom Places",
        "default": "",
        "tooltip": "Comma-separated list of file paths and/or uris"
    },
    
    "showTrash": {
        "type": "combobox",
        "description": "Show Trash",
        "default": 2,
        "options": {
            "Never": 0,
            "Always": 1,
            "When not empty": 2
        }
    },
    
    "sep2": {
        "type": "separator"
    },
    
    "places": {
        "type": "header",
        "description": "System Section"
    },
    
    "showComputer": {
        "type": "checkbox",
        "description": "Show Computer",
        "default": true
    },
    
    "showRoot": {
        "type": "checkbox",
        "description": "Show File System",
        "default": true
    },
    
    "showVolumes": {
        "type": "checkbox",
        "description": "Show Mounted Volumes",
        "default": true
    },
    
    "showNetwork": {
        "type": "checkbox",
        "description": "Show Network",
        "default": true
    },
    
    "systemCustomPlaces": {
        "type": "entry",
        "description": "Custom Places",
        "default": "",
        "tooltip": "Comma-separated list of file paths and/or uris"
    },
    
    "sep3": {
        "type": "separator"
    },
    
    "recent": {
        "type": "header",
        "description": "Recent Documents"
    },
    
    "showRecentDocuments": {
        "type": "checkbox",
        "description": "Show Recent Documents Section",
        "default": false
    },
    
    "recentSizeLimit": {
        "type": "spinbutton",
        "default": 10,
        "min": 0,
        "max": 30,
        "units": "",
        "step": 1,
        "description": "Number to show",
        "indent": true,
        "dependency": "showRecentDocuments"
    }
}